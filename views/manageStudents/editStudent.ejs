<!DOCTYPE html>
<html lang="en">

<head>
    <%include ../partials/head.ejs%>
</head>


<body class="animsition">
<div class="page-wrapper">
    <!-- HEADER MOBILE-->
    <%include ../partials/headerMenu.ejs%>
    <!-- END HEADER MOBILE-->

    <!-- MENU SIDEBAR-->
    <%include ../partials/sidebar.ejs%>
    <!-- END MENU SIDEBAR-->

    <!-- PAGE CONTAINER-->
    <div class="page-container">
        <!-- HEADER DESKTOP-->
        <%include ../partials/headerDesktop.ejs%>

        <!-- HEADER DESKTOP-->

        <!-- MAIN CONTENT-->
        <div class="container">
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="card">
                            <form method="post" action="/editStudent">
                                <div class="card-body">
                                    <div class="card-header bg-info">
                                        <h3>Edit User</h3>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col">
                                            <label>First Name</label>
                                            <input name="_id" id="_id" type="hidden" value="<%- user._id %>">
                                            <input class="form-control" type="text" name="FirstName"
                                                   placeholder="First Name"  value="<%- user.FirstName %>" required>
                                        </div>

                                        <div class="form-group col">
                                            <label>Last Name</label>
                                            <input class="form-control" type="text" name="LastName"
                                                   placeholder="Last Name" value="<%- user.LastName %>" required>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col">
                                            <label>EmailID</label>
                                            <input class="form-control" type="text" name="EmailID"
                                                   placeholder="EmailID" value="<%- user.EmailID %>" required>
                                        </div>

                                        <div class="form-group col">
                                            <label>Contact</label>
                                            <input class="form-control" type="text" name="ContactNumber"
                                                   placeholder="Contact Number" value="<%- user.ContactNumber %>"  required>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <button class="btn btn-primary mx-auto" type="submit"><i class="fa-fa-save"></i>Update User </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- END MAIN CONTENT-->
        <!-- END PAGE CONTAINER-->
    </div>

</div>

<%include ../partials/bodyScriptLoader.ejs%>

</body>

</html>
<!-- end document-->
